<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    android:background="@drawable/searchbackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">

        <ImageView
            android:id="@+id/avatar_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/name"
            android:layout_gravity="center_vertical"
            android:src="@drawable/searchbackground"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:text="Name"
            android:singleLine="true"
            android:id="@+id/name"
            android:layout_toRightOf="@+id/avatar_img" />

        <TextView
            android:id="@+id/fullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="12dp"
            android:text="Full Name"
            android:layout_alignLeft="@+id/name" />

        <TextView
            android:id="@+id/watcherCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fullName"
            android:layout_marginTop="12dp"
            android:text="Watcher Count"
            android:layout_alignLeft="@+id/fullName" />

        <TextView
            android:id="@+id/commitCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/watcherCount"
            android:layout_marginTop="12dp"
            android:text="Commit Count"
            android:layout_alignLeft="@+id/watcherCount" />

    </RelativeLayout>
</android.support.v7.widget.CardView>

